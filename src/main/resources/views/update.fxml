   <children>
      <VBox prefHeight="200.0" prefWidth="400.0">
         <children>
            <GridPane fx:id="tableGrid" alignment="CENTER" prefHeight="100.0" prefWidth="400.0">
      
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="194.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="270.0" minWidth="10.0" prefWidth="250.0" />
              </columnConstraints>
               <padding>
                  <Insets right="10.0" top="20.0" />
