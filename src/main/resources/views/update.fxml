            </GridPane>
            <StackPane prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#updateRecord" text="Обновить">
                     <StackPane.margin><Insets bottom="10" top="5" /></StackPane.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
